@model IEnumerable<House.Models.HouseListViewModel>

@{
    int rowNumber = 0;
}

<div class="h1">
    Houses
</div>

<div>
    <a asp-action="add" asp-controller="House" type="submit" class="btn btn-primary">Add</a>
</div>

<form method="post" class="m-1">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Square</th>
                <th scope="col">NumberOfRooms</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var house in Model)
            {

                rowNumber += 1;
                <tr>
                    <th scope="row">@rowNumber</th>
                    <td class="">@house.Name</td>
                    <td class="">@house.Address</td>
                    <td class="">@house.Square</td>
                    <td class="">@house.NumberOfRooms</td>
                    <td class="">
                        <a asp-action="update" asp-controller="house" asp-route-id="@house.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="house" asp-route-id="@house.Id" type="submit" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</form>
